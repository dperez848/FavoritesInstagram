<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TittlesParent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Tittles" parent="TittlesParent">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TittlesMedium" parent="TittlesParent">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TittlesBig" parent="TittlesParent">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextParent">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text" parent="TextParent">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextMedium" parent="TextParent">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBig" parent="TextParent">
        <item name="android:textSize">22sp</item>
    </style>

</resources>
